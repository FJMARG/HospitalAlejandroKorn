{% extends 'base.html.twig' %}
{% block Script %}
{% endblock %}  
{% block contenido %}
        <main>
            <table class="table table-hover">
                  <thead>
                    <tr>
                      <th scope="col">Apellido</th>
                      <th scope="col">Nombre</th>
                      <th scope="col">Tipo Doc.</th>
                      <th scope="col">Nro. Doc.</th>
                      <th scope="col">Nro. H.Clinica</th>
                      <th scope="col">Detalles</th>
                      <th scope="col">Acciones</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for paciente in pacientes %}
                     <tr>   
                          <td>{{ paciente.apellido }}</td>
                          
                          <td>{{ paciente.nombre }}</td>
                          
                          <td>{{ paciente.getTipoDoc().nombre() }}</td>
                          
                          <td> 
                               {% if paciente.numero != 0 %}
                                    {{ paciente.numero }} 
                               {% endif %}
                          </td>
                          <td> 
                               {% if paciente.nroHistoriaClinica != 0 %}
                                    {{ paciente.nroHistoriaClinica }}
                               {% endif %}
                          </td>
                          
                          <td>
                             <a href="index.php?categoria=paciente&accion=paciente_ver&id={{ paciente.id }}" class="btn btn-success btn-sm"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Ver Perfil</a>   
                          </td>
                          <td>
                              <a href="index.php?categoria=paciente&accion=paciente_pantallaEditar&id={{ paciente.id }}" title="Editar datos" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
                              <a href="index.php?categoria=paciente&accion=paciente_pantallaBorrado&id={{ paciente.id }}" title="Eliminar" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                          </td>
                      </tr>
                    {% endfor %}    
                  </tbody> 
            </table>    
        </main>
{% endblock %}         
