{% extends 'base.html.twig' %}
{% block Script %}
{% endblock %}  
{% block contenido %}
        <main>
        <div class="container">   
          <div class="col-sm-12 text-center">  
            {% if pacientes|length == 0 %}
                <div class="col-sm-offset-3 col-sm-4"> 
                    <h4>"No hay resultados para la busqueda"</h4>  
                </div>
                <div class="col-sm-offset-3 col-sm-4">
                    <a href="./index.php?categoria=paciente&accion=paciente_buscar" class="btn btn-primary"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Nueva Busqueda</a> 
                </div>  
            {% else %}
            <table class="table table-hover">
                  <thead>
                    <tr>
                      <th scope="col">Nombre</th>
                      <th scope="col">Apellido</th>
                      <th scope="col">Tipo Doc.</th>
                      <th scope="col">Nro. Doc.</th>
                      <th scope="col">Nro. H.Clinica</th>
                      <th scope="col">Acciones</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for paciente in pacientes %}
                     <tr> 
                          <td>{{ paciente.nombre }}</td>

                          <td>{{ paciente.apellido }}</td>
                                                
                          <td>{{ paciente.getTipoDoc().nombre() }}</td>
                          
                          <td> 
                               {% if paciente.numero != 0 %}
                                    {{ paciente.numero }} 
                               {% endif %}
                          </td>
                          <td> 
                               {% if paciente.nroHistoriaClinica != 0 %}
                                    {{ paciente.nroHistoriaClinica }}
                               {% endif %}
                          </td>
                          <td>
                              <a href="index.php?categoria=paciente&accion=paciente_ver&id={{ paciente.id }}" class="btn btn-success btn-sm"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Ver</a>   
                              <a href="index.php?categoria=paciente&accion=paciente_pantallaEditar&id={{ paciente.id }}" title="Editar datos" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Editar</a>
                              <a href="index.php?categoria=paciente&accion=paciente_pantallaBorrado&id={{ paciente.id }}" title="Eliminar" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Borrar</a>
                          </td>
                      </tr>
                    {% endfor %}    
                  </tbody> 
              </table> 
              {% endif %}
            </div>   
          </div>
          <div>  
              {% for i in 1..cantPags %}
                   <ul class="pagination">
                      <li><a {% if pag != i %} href="index.php?categoria=paciente&accion=paciente_verTodos&pag={{ i }}" {% endif %}>{{ i }}</a></li>
                   </ul>
              {% endfor %}
          </div>
        </main>
{% endblock %}         
