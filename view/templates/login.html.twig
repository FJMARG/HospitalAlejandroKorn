{% extends 'baseindex.html.twig' %}
{% block Head %}
    <!-- Titulo Pagina -->
    <title>Hospital Dr. Alejandro Korn - Login</title>
{% endblock %}
{% block Script %}
   <script src="mi_js/misScripts.js"></script>
{% endblock %}    
{% block contenido %}

 <main>
        <div class="container margin-space">
        {% if mensaje %}
            <div class="alert {% if mensaje.getType() == 'success' %} alert-success {% else %} alert-danger {% endif %} alert-dismissible fade in show" role="alert">
                <strong>{{ mensaje.getDisplay() }}</strong> {{ mensaje.getMsj() }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endif %}
        <div class="contentMargin login">
            <form class="login" method="post" action="./index.php">
                <label class="label_login" for="user">Usuario</label>
                <input class="form-control type="text" id="user" name="usuario" required/>
                <label class="label_login" for="pass">Contrase√±a</label>
                <input class="form-control" type="password" id="pass" name="password" required/>
                <input class="btn btn-primary" type="submit" value="Aceptar"/>
            </form>
        </div>
    </div>
</main>

{% endblock %}    



