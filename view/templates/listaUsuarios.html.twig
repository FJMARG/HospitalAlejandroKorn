
{% extends 'base.html.twig' %}
{% block Script %}
{% endblock %}  
{% block contenido %}
        <main>



          <form action="./index.php" method="get" class="col-md-3 col-md-offset-3">
            
                        <input type="hidden" name="categoria" value="listarUsuarios">
                        <input type="hidden" name="accion" value="listarUsuarios">
                        <input type="text"  class="form-control"  name="uname" placeholder="Nombre de usuario" title="Ingrese texto aqui para filtrar por nombre de usuario.">


                        <select class="form-control" name="act" title="Seleccione una opcion para filtrar por activo/bloqueado">
                          <option disabled select>Seleccione una opcion</option>
                          <option value="-1">Activos y bloqueados</option>
              <option value="1">Solo inactivos</option>
              <option value="2">Solo activos</option>
            </select>
            <button type="submit" class="btn btn-info">
                        <span class="glyphicon glyphicon-search"></span> Buscar</button>
                    </form>


        <div class="container">   
            <table class="table table-hover">
                  <thead>
                    <tr>
                      <th scope="col">Nombre</th>
                      <th scope="col">Apellido</th>
                      <th scope="col">Nombre de Usuario</th>
                      <th scope="col">Estado de la cuenta:</th>
                    </tr>
                  </thead>
                  <tbody>
          {% for i in despl..limite %}
              <tr>
              <td>{{ usuarios[i].firstname }}</td>
              <td>{{ usuarios[i].lastname }}</td>
              <td>{{ usuarios[i].username }}</td>
              <td>{% if usuarios[i].activo == 1 %} Activo {% else %} Inactivo {% endif %}</td>
               <td>
                             <a href="./index.php?categoria=usuarios&accion=verUsuario&pag={{ pag }}&id={{ usuarios[i].id }}"" class="btn btn-success btn-sm"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Ver</a>   
                              <a href="./index.php?categoria=usuarios&accion=modificarUsuario&pag={{ pag }}&id={{ usuarios[i].id }}"title="Editar datos" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Editar</a>
                              <a href="./index.php?categoria=usuarios&accion=eliminarUsuario&pag={{ pag }}&id={{ usuarios[i].id }}" title="Eliminar" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Borrar</a>
                          </td>


            </tr>
                {% endfor %}  
                  </tbody> 
            </table> 
            </div>   
             {% for i in 1..cantPags %}
                 <ul class="pagination">
                    <li><a {% if pag != i %} href="./index.php?categoria=usuarios&accion=listarUsuarios&pag={{ i }}{% if busqueda['username'] and busqueda['activo'] %} &uname={{ busqueda['username'] }}&act={{ busqueda['activo'] }} {% endif %}" {% endif %}>{{ i }}</a></li>
                 </ul>
                 {% endfor %}
        </main>
{% endblock %}         
