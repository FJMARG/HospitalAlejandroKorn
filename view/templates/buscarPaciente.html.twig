{% extends 'base.html.twig' %}
{% block Script %}
<script src="mi_js/validarPacienteBusqueda.js"></script>
{% endblock %} 
{% block contenido %}
<main>
<div class="container margin-space">
        <form class="form-horizontal" method="get" action="./index.php?">
                  <div class="form-group">   
                       <div method="post" class="col-sm-offset-9 col-sm-6">
                            <button type="submit" class="btn btn-info">  
                            <span class="glyphicon glyphicon-user"></span> Pacientes sin documento registrado</button>
                            <input type="hidden" name="categoria" value="paciente">
                            <input type="hidden" name="accion" value="paciente_verNoRegistrados">
                       </div>
                  </div> 
       </form>
<div class="col-sm-offset-2 col-sm-8">  
        <form class="form-horizontal" method="get" action="./index.php?" id="searchForm">
              <div class="form-group">
                   <div class="col-sm-offset-4 col-sm-6">
                        <h3>Busqueda con Filtros</h3>
                   </div>
              </div> 
              <!-- Alentar de mensajes -->    
              {% if mensaje is defined %}  
              <div class="alert alert-danger alert-dismissable">
                      <button type="button" data-dismiss="alert" class="close">&times;</button>
                      <strong>{{ mensaje.getTitulo() }}</strong> {{ mensaje.getCuerpo() }} 
              </div>
              {% endif %}  
              <div class="form-group">
                  <input type="hidden" name="categoria" value="paciente">
              </div>
              <div class="form-group">
                  <input type="hidden" name="accion" value="paciente_verResultado">
              </div>    
              <div class="form-group">
                   <label for="nombrePaciente">Nombre Paciente</label>
                   <input type="text" class="form-control" name="nombrePaciente" id="nombrePaciente">
              </div>
              <div class="form-group">
                   <label for="apellidoPaciente">Apellido Paciente</label>
                   <input type="text" class="form-control" name="apellidoPaciente" id="apellidoPaciente">
              </div>
              <div class="form-group">
                   <label for="tipoDocumento">Tipo Documento</label>
                   <select class="form-control" name="tipoDocumento" id="tipoDocumento">
                           <option value="" selected></option>
                           {% for documento in documentos%}
                               <option value="{{ documento.getId() }}">{{ documento.getNombre() }}</option>
                           {% endfor %} 
                   </select>
              </div>
              <div class="form-group">
                   <label for="numeroDocumento">Numero Documento</label>
                   <input type="number" class="form-control" name="numeroDocumento" id="numeroDocumento">
              </div>
              <div class="form-group">
                  <label for="numeroHistoriaClinica">Numero Historia Clinica</label>
                  <input type="number" class="form-control" name="numeroHistoriaClinica" id="numeroHistoriaClinica">
              </div>
              <div class="form-group">
                  <div method="post" class="col-sm-offset-4 col-sm-8">
                        <button type="submit" class="btn btn-info">
                        <span class="glyphicon glyphicon-search"></span> Buscar</button>
                        <button type="reset" class="btn btn-secondary"><span>&#x21B6;</span> Reiniciar campos</button>
                        <a href="./index.php?categoria=paciente&accion=paciente_verTodos" class="btn btn-danger"><span class="glyphicon glyphicon-remove-circle"></span> Cancelar</a>
                  </div>
              </div>
        </form>   
</div>               
</div>                                   
</main>  
{% endblock %}     
